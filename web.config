<configuration>
  <system.webServer>
    
    <!-- indicates that the application.py file is a node.js application 
    to be handled by the iisnode module -->
    
    <handlers>
      <add name="iisnode" path="application.py" verb="*" modules="iisnode" />
    </handlers>
    
    <!-- adds application.py to the default document list to allow 
    URLs that only specify the application root location, 
    e.g. http://mysite.antarescloud.com/ -->
    
    <defaultDocument enabled="true">
      <files>
        <add value="application.py" />
      </files>
    </defaultDocument>
    
  </system.webServer>
</configuration>